@model IEnumerable<TheBigDukan.Product>

@{
    ViewBag.Title = "ProductDetailActionIndex";

    Main_Category mainCat = (Main_Category)Session["CategoryOBj"];

       
}

    <h2>@Html.DisplayFor(c => mainCat.cat_Data)</h2>


<p>
    <input type="submit" value="Create" class="btn btn-default" onclick="location.href='@Url.Action("ProductAction", "Product")'" />
</p>
<div class="col-md-12">
    <table class="table table-striped">
        <!--
          <tr>
             <th>
                 @Html.DisplayNameFor(model => model.product_ID)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.product_Maker)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.product_Name)
             </th>

             <th>
                 @Html.DisplayNameFor(model => model.product_Quantity)
             </th>

             <th>
                 @Html.DisplayNameFor(model => model.Discounted_Prize)
             </th>
             <th></th>
         </tr>
        -->
        <thead>
            <tr>
                <th>#</th>
                <th>Company</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Discount</th>
                <th>Action</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.product_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_Maker)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_Quantity)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Discounted_Prize)
                </td>
                <td>
                    <!--
                         @Html.ActionLink( "Edit" , "EditProduct", new { id = item.product_ID }) |
                     @Html.ActionLink("Details", "DetailProduct", new {  id=item.product_ID  }) |
                     @Html.ActionLink("Delete", "DeleteProduct", new {  id=item.product_ID })
                    -->
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Select
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#" onclick="location.href='@Url.Action("EditProduct", "ProductDetail", new { id = item.product_ID })'">Edit</a></li>
                            <li><a href="#" onclick="location.href='@Url.Action("DetailProduct", "ProductDetail", new { id = item.product_ID })'">Details</a></li>
                            <li><a href="#" onclick="location.href='@Url.Action("DeleteProduct", "ProductDetail", new { id = item.product_ID })'">Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
